<h1>Hello this is the admin dashboard</h1>


<p>Product Count: <%= @products.count %></p>
<p>Review Count: <%= @reviews.count %></p>
<p>User Count: <%= @users.count %></p>

<hr>


<table>

  <thead>
    <tr>
      <th>ID</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Admin User?</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.is_admin? ? 'YES' :nil %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<hr>
  <table>
    <thead>
      <th>Title</th>
      <th>Discription</th>
      <th>Price</th>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= link_to product.title.truncate(30), product_path(product) %></td>
          <td><%= product.description.truncate(50) %></td>
          <td><%= product.price %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
