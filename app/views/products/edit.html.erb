

<h1>Edit a product</h1>
<div>
  <% if @product.errors.present? %>
    <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>


<%= form_for(@product) do |f| %>
  <div class = 'form-group'>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class = 'form-group'>
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  <div>
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div>
  <div>

    <%= f.submit class: "btn btn-info" %>
  </div>
<% end %>
</div>
